<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_while"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_280"
        android:background="@mipmap/bg_set">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_51"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="山西省空气质量发布"
                android:textColor="@color/color_while"
                android:textSize="@dimen/sp_23" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center"
                android:text="山西省环境监测中心站"
                android:textColor="@color/color_while"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center"
            android:text="技术支持：太原明普科技有限公司"
            android:textColor="@color/color_while"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_12"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_16"
        android:orientation="vertical"

        >

        <LinearLayout
            android:id="@+id/set_AQIlevel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_set_level" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:text="空气污染级别说明"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:drawableRight="@mipmap/icon_set_more"
                    />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/dp_41"
            android:layout_marginTop="@dimen/dp_12"
            />

        <LinearLayout
            android:id="@+id/set_fabu_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_8"
            >

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_set_fabu" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:text="发布说明"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:drawableRight="@mipmap/icon_set_more"
                    />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/dp_41"
            android:layout_marginTop="@dimen/dp_12"
            />

        <LinearLayout
            android:id="@+id/set_checkUpdata_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_8"
            >

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_set_updata" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:text="检测更新"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:drawableRight="@mipmap/icon_set_more"
                    />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/dp_41"
            android:layout_marginTop="@dimen/dp_12"
            />

        <LinearLayout
            android:id="@+id/set_about_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_12"
            >

            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_set_about" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:text="关于我们"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:drawableRight="@mipmap/icon_set_more"
                    />

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"
            android:layout_marginLeft="@dimen/dp_41"
            android:layout_marginTop="@dimen/dp_6"
            />

    </LinearLayout>

</LinearLayout>